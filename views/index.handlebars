<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 id="title">Eat Da Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      {{#each burgers}}
        {{#unless devoured}}
        <div class="burgers my-3">
          {{name}}
          <button class="btn btn-warning" data-id="{{this.id}}">Devour Burger!</button>
        </div>
      {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-4">
      <form action="/api/burgers">
        <textarea name="newBurger" id="newBurger" cols="30" rows="5"></textarea>
        <button class="btn btn-success" id="addBurger">Add Burger!</button>
      </form>
    </div>
    <div class="col-md-4">
      {{#each burgers}}
        {{#if devoured}}
          {{name}}
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>